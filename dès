#include <stdio.h>
#include <stdlib.h>
#include <time.h>




int main()
{
  srand(time(NULL));
  int pair = 0;
  int impair = 0;
  
  for (int i = 0;i<1000;i++){
  int nombreAlea = rand() % 6 + 1 ;
      if (nombreAlea % 2 == 0){
          pair++;
      }
      else {
          impair ++;
      }
  printf("Le nombre : %d  \n" ,nombreAlea);
  }
  
  printf("Il ya %d nombres pair  et %d nombres impairs sur 1000 lancer",pair,impair);
  
}
    
        




